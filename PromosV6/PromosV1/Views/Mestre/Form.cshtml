@model MestreViewModel

@{
    ViewData["Title"] = "Cadastro de conta";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Cadastro de conta mestre</h2>

<div class="row">
    <div class="col-lg-3">
        <form action="Salvar" method="post" enctype="multipart/form-data">

            <input type="hidden" name="Operacao" value="@ViewBag.Operacao" />

            <label for="Id" class="control-label">Id</label>

            @if (ViewBag.Operacao == "I")
            {
                <input type="number" Name="Id" value="@Model.Id" class="form-control disabled" readonly />
            }
            else
            {
                <input type="number" Name="Id" value="@Model.Id" class="form-control disabled" readonly />
            }

            <br />
            <label for="Nome" class="control-label">Nome</label>
            <input type="text" Name="Nome" value="@Model.Nome" class="form-control" />
            <span asp-validation-for="Nome" class="text-danger"></span>

            <br />
            <label for="NomeEmpresa" class="control-label">Nome da Empresa</label>
            <input type="text" Name="NomeEmpresa" value="@Model.NomeEmpresa" class="form-control" />
            <span asp-validation-for="NomeEmpresa" class="text-danger"></span>

            <br />
            <label for="Senha" class="control-label">Senha</label>
            <input type="text" Name="Senha" value="@Model.Senha" class="form-control" />
            <span asp-validation-for="Senha" class="text-danger"></span>

            <br />
            <input type="submit" value="Salvar dados" />
            <br />
            <span class="text-danger">@ViewBag.Erro</span>
        </form>
    </div>
</div>